button
  background-color $white
  color $subtitle
  border-radius 10px
  padding pxToRem(16) pxToRem(24)
  box-shadow 0px 2px 4px rgba(203, 203, 203, 0.5), 0px 8px 26px rgba(203, 203, 203, 0.1)
  font-size $bodyMedium
  font-weight 700

  &:hover
    cursor pointer

.button--primary
  &--large
    width ratio(380)
    height ratio(104)
    box-sizing border-box

    font-family $font-title-small
    font-size $H4
    font-weight 900
    letter-spacing pxToRem(0.4)
    line-height pxToRem(36)

  &--medium
    font-family $font-text-bold
    font-size pxToRem(16)
    letter-spacing pxToRem(0.4)
    line-height pxToRem(28)

  &--small
    font-family $font-text-bold
    font-size pxToRem(14)
    letter-spacing pxToRem(0.4)
    line-height pxToRem(28)
